# GitHub Actions Secrets Environment File
# Copy this file to secrets.env and fill in your values
# Then run: ./set-gha-secrets.sh and choose option 5

# ===========================================
# Common Secrets (used by both environments)
# ===========================================

# Path to your GCP service account key file
GCP_SA_KEY_FILE=./key.json

# Your GCP project ID
GCP_PROJECT_ID=your-gcp-project-id

# Path to your signing key file (will be base64 encoded automatically)
SIGNING_SA_KEY_FILE=./signing-key.json

# ===========================================
# Staging Environment Secrets
# ===========================================

STAGING_SUPABASE_URL=https://your-staging-project.supabase.co
STAGING_SUPABASE_SERVICE_ROLE=your-staging-service-role-key
STAGING_SUPABASE_ANON_KEY=your-staging-anon-key
STAGING_ENCRYPTION_KEY=your-32-character-encryption-key
STAGING_ENCRYPTION_SALT=your-16-char-salt
STAGING_BUCKET_NAME=your-staging-bucket-name
STAGING_SUPABASE_PROJECT_ID=your-staging-supabase-project-id
STAGING_SUPABASE_ACCESS_TOKEN=your-staging-supabase-access-token
STAGING_SUPABASE_DB_PASSWORD=your-staging-supabase-db-password

# Optional staging secrets
# STAGING_DDX_API_BASE_URL=https://staging-ddx-api.example.com
STAGING_REDIRECT_URL=https://staging-bem-reports-web.example.com

# ===========================================
# Production Environment Secrets
# ===========================================

PROD_SUPABASE_URL=https://your-prod-project.supabase.co
PROD_SUPABASE_SERVICE_ROLE=your-prod-service-role-key
PROD_SUPABASE_ANON_KEY=your-prod-anon-key
PROD_ENCRYPTION_KEY=your-32-character-encryption-key
PROD_ENCRYPTION_SALT=your-16-char-salt
PROD_BUCKET_NAME=your-prod-bucket-name
PROD_SUPABASE_ACCESS_TOKEN=your-prod-supabase-access-token
PROD_SUPABASE_DB_PASSWORD=your-prod-supabase-db-password

# Optional production secrets
# PROD_DDX_API_BASE_URL=https://ddx-api.example.com
PROD_REDIRECT_URL=https://bem-reports-web-c53ivjhyqa-uc.a.run.app

