# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_STREAMLIT_URL=http://localhost:8501

# Backend API URL for server-side requests (used in route handlers)
# This is used when the Next.js server needs to call the backend API
# For local dev, use localhost. For production, use the internal backend URL or public URL
API_URL=http://localhost:8000

# Frontend URL Configuration
# This is the base URL of your frontend application
# Used for Supabase redirects and authentication callbacks
# Local: http://localhost:8081
# Staging: https://staging-bem-reports-web-YOUR_PROJECT_NUMBER.us-central1.run.app
# Production: https://prod-bem-reports-web-YOUR_PROJECT_NUMBER.us-central1.run.app
NEXT_PUBLIC_SITE_URL=http://localhost:8081
REDIRECT_URL=http://localhost:8081

# Environment
NEXT_PUBLIC_ENV=local
